<%- include('./partials/header') %>

<main class="home-container">
  <section class="intro">
    <p class="intro-line">
      Bienvenue sur le site des passionnés du cinéma et de la cuisine&nbsp;!
    </p>
    <p class="intro-line">
      Vous trouverez des recettes de cuisine inspirées de vos films préférés.
    </p>
    <p class="intro-note">
      -Attention, ces recettes peuvent contenir des spoilers… et beaucoup de
      fromage-
    </p>
  </section>

  <button class="filter-btn" aria-label="Filtrer les recettes">
    <img src="/images/filters.svg" alt="Filtrer" />
  </button>

  <h2 class="section-heading">
    <span class="dash">-</span> À L’AFFICHE <span class="dash">-</span>
  </h2>

  <section class="cards">
    <% recipes.forEach(recipe => { %>
      <article class="card">
        <div class="card-image">
          <% if (recipe.image_url) { %>
            <img src="<%= recipe.image_url %>" alt="Photo de <%= recipe.name %>" />
          <% } else { %>
            <img src="/images/tartelette.png" alt="Image par défaut" />
          <% } %>
        </div>
        <div class="card-body">
          <h3 class="recipe-title"><%= recipe.name %></h3>
          <p class="film-title"><em><%=  %></em></p>
        </div>
      </article>
    <% }) %>
  </section>
  
  <div class="cta">
    <a href="/recettes" class="btn-load-all">CHARGER TOUT</a>
  </div>
</main>

<%- include('./partials/footer') %>
