<%- include('./partials/header') %>

<div class="admin-container">
  <div class="admin-header">
    <button class="admin-button" onclick="toggleMenu('users', this)">
      UTILISATEURS
    </button>
    <button class="admin-button" onclick="toggleMenu('categories', this)">
      CATÉGORIES
    </button>
    <button class="admin-button" onclick="toggleMenu('recipes', this)">
      RECETTES
    </button>
  </div>

  <div id="users" class="menu-content">
    <h2>Utilisateurs</h2>
    <% users.forEach(user => { %>
      <div class="user-card">
        <img src="/images/PhotoProfile.png" alt="User Image" />
        <div>
          <h3><%= user.username || user.email || "Nom inconnu" %></h3>
          <button class="profil-button">Profil</button>
          <p>Nombre de recettes: ???</p>
        </div>
        <div class="button-group">
          <button class="modify-button">Modifier</button>
          <button class="delete-button">Supprimer</button>
        </div>
      </div>
    <% }) %>
  </div>
  
  <div id="categories" class="menu-content" style="display: none">
    <h2>Catégories</h2>
    <% categories.forEach(category => { %>
      <div>
        <h3><%= category.name %></h3>
        <li>
          <%= category.name %>
          <button class="modify-button" data-id="<%= category.id_category %>" data-name="<%= category.name %>">Modifier</button>
        </li>
            <button type="submit" class="delete-button">Supprimer</button>
        <div id="categoryModal" class="modal" style="display:none;">
          <div class="modal-content">
            <span id="closeModal" style="float:right; cursor:pointer;">&times;</span>
            <h2>Modifier la catégorie</h2>
            <form id="categoryForm">
              <input type="text" id="categoryName" name="categoryName" required />
              <button type="submit">Enregistrer</button>
            </form>
          </div>
        </div>
      </form>
      </div>
    <% }) %>
  </div>
  
  <div id="recipes" class="menu-content" style="display: none">
    <h2>Recettes</h2>
    <% recipes.forEach(recipe => { %>
      <div>
        <h3><%= recipe.name %></h3>
        <a href="/recipes/<%= recipe.id_recipe %>/edit" class="modify-button">Modifier</a>

        <form action="/recipes/<%= recipe.id_recipe %>/delete" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette recette ?');">
          <button type="submit" class="delete-button">Supprimer</button>
        </form>

      </div>
    <% }) %>
  </div>
  

<script>
  function toggleMenu(menuId, clickedButton) {
    document.querySelectorAll(".menu-content").forEach((menu) => {
      menu.style.display = "none";
    });

    document.getElementById(menuId).style.display = "block";

    document.querySelectorAll(".admin-button").forEach((button) => {
      button.classList.remove("selected");
    });

    clickedButton.classList.add("selected");
  }
</script>



<script src="/js/category-modal.js"></script>


<%- include('./partials/footer') %>
